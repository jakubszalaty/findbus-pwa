{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": false,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es6",
        "sourceMap": true,
        "allowJs": true,
        "outDir": "./dist",
        "lib": ["es2017", "dom", "esnext.asynciterable"]
    },
    "exclude": ["node_modules", "dist", "misc", "__test__", "**/*.spec.ts", "app"],
    "include": ["**/*.ts", "**/*.d.ts"]
}
